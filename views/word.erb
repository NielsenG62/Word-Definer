<div class='center' id='word-wrap'>
<h2 id='word-display'>Word: <%= @word.name %></h2>
</div>

  <% if @word.definitions.any? %>
  <h3>Definitions:</h3>
    <ul>
      <% @word.definitions.each do |definition| %>
        <a href="/words/<%= @word.id %>/definitions/<%= definition.id %>"><li class='list'><%= definition.name %></li></a>
      <% end %>
    </ul>
  <% else %>
    <p>There are no definitions listed for this word yet.</p>
  <% end %>


<form action="/words/<%= @word.id %>/definitions" method="post">
  <div class="form-group">
    <label for="definition_name">Add a definition</label>
    <input id="definition_name" name="definition_name" class="form-control" type="text">
  </div>
  <button type="submit" class="btn btn-success">Add definition</button>
  <a class="btn btn-warning" href="/words/<%= @word.id %>/edit">Edit word</a>
</form>
<div class='center'>
  <a  href="/words">Return to the word list</a>
</div>