<h1>Update <%= @word.name() %></h1>

<form action="/words/<%= @word.id() %>" method="post" class="form-group">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename word</label>
  <input id="name" name="name" type="text" class ="form-control">

  <button class="btn btn-success" type="submit">Update</button>
</form>

<form action="/words/<%= @word.id() %>" method='post'>
  <input type="hidden" name="_method" value='delete'>
  <button class="btn btn-danger" type='submit'>Delete word</button>
</form>

<p class='center'><a href="/words">Return to word list</a></p>